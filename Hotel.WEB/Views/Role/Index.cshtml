@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>

<div class="container">
    <h1>
        All Roles
        <a asp-action="Create" class="btn right btn-secondary red">Create a Role</a>
    </h1>

    <table class="table table-sm table-bordered table-bordered">
        <tr>
            <th>ID</th>
            <th>Name</th>
        </tr>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td class="right">
                    <a class="btn red btn-sm btn-primary" asp-action="Update" asp-route-id="@role.Id">Update</a>
                    <a class="btn red btn-sm btn-primary" asp-action="Delete" asp-route-id="@role.Id">Delete</a>
                </td>
            </tr>
        }
    </table>
</div>