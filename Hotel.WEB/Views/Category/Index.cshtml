@model IEnumerable<Hotel.WEB.Models.CategoryModel>

@{
    ViewData["Title"] = "Categories";
}

<div class="container">
    <br />
    <h3>
        Categories
        <a asp-action="Create" class="right">Add</a>
    </h3>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Bed)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MaxPeople)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Bed)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MaxPeople)
                    </td>
                    <td class="right">
                        <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
