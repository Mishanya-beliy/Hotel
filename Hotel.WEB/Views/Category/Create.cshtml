@model Hotel.WEB.Models.CategoryModel

@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <h4>Create</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                        <select asp-for="Name" class="form-control" style="display:inline-block" 
                                asp-items="Html.GetEnumSelectList<Hotel.DAL.Entities.Categories>()"></select>
                        <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col m6 form-group">
                        <label asp-for="Bed" class="control-label"></label>
                        <input asp-for="Bed" class="form-control" />
                        <span asp-validation-for="Bed" class="text-danger"></span>
                    </div>
                    <div class="col m6 form-group">
                        <label asp-for="MaxPeople" class="control-label"></label>
                        <input asp-for="MaxPeople" class="form-control" />
                        <span asp-validation-for="MaxPeople" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <a asp-action="Index">Back to List</a>
                    <input type="submit" value="Create" class="btn red right btn-primary" />
                </div>
            </form>
        </div>
    </div>

    </div>
